<div class="container">
    <div class="row justify-content-center">
        <div class="col">
            <h1>Products</h1>
            <div class="text-right">
                <%= link_to "Nuevo Producto", new_product_path, class: "btn btn-primary" %>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Categor√≠as</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% @products.each do |product| %>
                        <tr>
                            <td><%= product.name %></td> 
                            <td><%= product.price %></td>
                            <td><%= product.categories.map { |category| category.name }.join(", ") %></td>
                            <th>
                            <%= link_to "Editar", edit_product_path(product.id), class: "btn btn-primary" %>
                            <%= link_to "Eliminar", product_path(product.id), method: :delete, class: "btn btn-danger" %>
                            </th>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>